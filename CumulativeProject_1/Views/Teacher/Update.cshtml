@model CumulativeProject_1.Models.Teacher
@{
    ViewBag.Title = "Update";
}

<div id="containershow">
    <nav>
        <a class="navlink" href="/Teacher/Show/@Model.TeacherId">Back</a>
    </nav>
</div>

<h2>Update Teacher</h2>

<form method="POST" action="/Teacher/Update/@Model.TeacherId">
    <div>
        <lable for="TeacherFname">First Name</lable>
        <input type="text" id="TeacherFname" name="TeacherFname" 
               value="@Model.TeacherFname" />    
    </div>
    <div>
        <lable for="TeacherLname">Last Name</lable>
        <input type="text" id="TeacherLname" name="TeacherLname"
               value="@Model.TeacherLname"/>
    </div>
    <div>
        <lable for="TeacherEnumber">Employee Number</lable>
        <input type="text" id="TeacherEnumber" name="TeacherEnumber"
               value="@Model.TeacherEnumber"/>
    </div>
    <div>
        <lable for="TeacherHdate">Hire Date</lable>
        <input type="text" id="TeacherHdate" name="TeacherHdate"
               value="@Model.TeacherHdate"/>
    </div>
    <div>
        <lable for="TeacherSalary">Salary</lable>
        <input type="text" id="TeacherSalary" name="TeacherSalary"
               value="@Model.TeacherSalary"/>
    </div>
    <div>
        <input type="submit" value="Update Teacher" />
    </div>
</form>

